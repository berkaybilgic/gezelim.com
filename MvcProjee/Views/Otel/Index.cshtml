@using MvcProjee.Models.Entity;
@model List<Table_Otel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Otel ID</th>
            <th>Otel Adı</th>
            <th>Otel Konum</th>
            <th>Otel İl</th>
            <th>Otel İlçe</th>
            <th>Kategori ADI</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var otel in Model)
        {
            <tr>
                <th>@otel.OtelID</th>
                <td>@otel.OtelAdı</td>
                <td><a href="@otel.OtelKonumu"><button class="btn btn-info">Konumu</button></a></td>
                <td>@otel.Otel_İl</td>
                <td>@otel.Otel_İlce</td>
                <td>@otel.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = otel.OtelID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Otel/OtelGetir/@otel.OtelID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Otel/YeniOtel/" class="btn btn-primary">Yeni otel ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
