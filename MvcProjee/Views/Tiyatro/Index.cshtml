@using MvcProjee.Models.Entity
@model List<Table_TIYATRO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>TİYATRO ID</th>
            <th>TİYATRO ADI</th>
            <th>TİYATRO KONUM</th>
            <th>TİYATRO İl</th>
            <th>TİYATRO İlçe</th>
            <th>KATEGORİ ADI</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tyr in Model)
        {
            <tr>
                <th>@tyr.TiyatroID</th>
                <td>@tyr.TiyatroAdı</td>
                <td><a href="@tyr.TiyatroKonum"><button class="btn btn-info">Konumu</button></a></td>
                <td>@tyr.Tiyatroİl</td>
                <td>@tyr.Tiyatroİlce</td>
                <td>@tyr.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = tyr.TiyatroID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Tiyatro/TiyatroGetir/@tyr.TiyatroID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Tiyatro/YeniTiyatro/" class="btn btn-primary">Yeni Tiyatro ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
