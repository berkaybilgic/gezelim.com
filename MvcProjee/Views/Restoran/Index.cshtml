@using MvcProjee.Models.Entity
@model List<TableRestorant>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>RESTORAN ID</th>
            <th>RESTORAN ADI</th>
            <th>RESTORAN KONUM</th>
            <th>RESTORAN İL</th>
            <th>RESTORAN İLÇE</th>
            <th>KATEGORİ ADI</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rest in Model)
        {
            <tr>
                <th>@rest.RestorantID</th>
                <td>@rest.RestorantAdı</td>
                <td><a href="@rest.RestorantKonumu"><button class="btn btn-info">Konumu</button></a></td>
                <td>@rest.Restorantİl</td>
                <td>@rest.Restorantİlce</td>
                <td>@rest.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = rest.RestorantID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Restoran/RestoranGetir/@rest.RestorantID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Restoran/YeniRestoran/" class="btn btn-primary">Yeni Restoran ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
