@using MvcProjee.Models.Entity;
@model List<Table_AVM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>

            <th>Avm ID</th>
            <th>Avm Adı</th>
            <th>Avm Konum</th>
            <th>Avm İl</th>
            <th>Avm İlçe</th>
            <th>Kategori AD</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var merkez in Model)
        {
            <tr>
                <th>@merkez.AvmID</th>
                <td>@merkez.AvmAdı</td>
                <td><a href="@merkez.AvmKonumu"><button class="btn btn-info">Konumu</button></a></td>
                <td>@merkez.Avmİl</td>
                <td>@merkez.Avmİlce</td>
                <td>@merkez.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = merkez.AvmID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Avm/GUNCELLE/@merkez.AvmID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>

<a href="/Avm/YeniAvm/" class="btn btn-primary">Yeni AVM ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
$('#tbl1').dataTable({});
</script>