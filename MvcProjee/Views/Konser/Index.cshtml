@using MvcProjee.Models.Entity;
@model List<Table_Konser>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Konser ID</th>
            <th>Konser Adı</th>
            <th>Konser Konum</th>
            <th>Konser Tarihi</th>
            <th>Konser İl</th>
            <th>Konser İlçe</th>
            <th>Kategori AD</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var knsr in Model)
        {
            <tr>
                <th>@knsr.KonserID</th>
                <td>@knsr.KonserAdı</td>
                <td><a href="@knsr.KonserKonumu"><button class="btn btn-info">Konumu</button></a></td>
                <td>@knsr.KonserTarihi</td>
                <td>@knsr.Konserİl</td>
                <td>@knsr.Konserİlce</td>
                <td>@knsr.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = knsr.KonserID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Konser/KonserGetir/@knsr.KonserID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }

    </tbody>
</table>
<a href="/Konser/YeniKonser/" class="btn btn-primary">Yeni Konser ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
