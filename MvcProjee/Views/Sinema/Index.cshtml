@using MvcProjee.Models.Entity
@model List<Table_Sinema>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>SİNEMA ID</th>
            <th>SİNEMA ADI</th>
            <th>SİNEMA KONUMU </th>
            <th>SİNEMA İL</th>
            <th>SİNEMA İLÇE</th>
            <th>KATEGORİ AD</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var snm in Model)
        {
            <tr>
                <th>@snm.SinemaID</th>
                <td>@snm.SinemaAdı</td>
                <td><a href="@snm.SinemaKonumu"><button class="btn btn-info">Konumu</button></a></td>
                <td>@snm.Sinemaİl</td>
                <td>@snm.Sinemaİlce</td>
                <td>@snm.Table_Kategori.KategoriAd</td>
                <td>@Html.ActionLink("Sil", "SIL", new { id = snm.SinemaID }, new { @class = "btn btn-danger", onclick = "return confirm('Silmek İstiyor Musunuz?')" })</td>
                <td><a href="/Sinema/SinemaEkle/@snm.SinemaID" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Sinema/YeniSinema/" class="btn btn-primary">Yeni Sinema Salonu Ekle</a>

<link href="~/Content/DataTables/css/buttons.bootstrap4.css" rel="stylesheet" />
